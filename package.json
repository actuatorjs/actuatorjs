{
	"name": "@actuatorjs/actuatorjs",
	"version": "0.0.1",
	"description": "Core interfaces and classes for actuatorjs ecosystem",
	"type": "module",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"prepare": "husky",
		"build:esm": "bun build src/index.ts --outdir dist/esm --format esm",
		"build:cjs": "bun build src/index.ts --outdir dist/cjs --format cjs",
		"build:types": "tsc",
		"build": "bun run build:esm && bun run build:cjs && bun run build:types",
		"test": "bun test"
	},
	"lint-staged": {
		"*.{js,ts,json}": [
			"bunx biome check --write"
		]
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.0",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/bun": "latest",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
